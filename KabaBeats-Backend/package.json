{
  "name": "kababeats-backend",
  "version": "1.0.0",
  "description": "KabaBeats Backend API - Music Beat Marketplace",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "setup:media": "chmod +x scripts/setup-media-processing.sh && ./scripts/setup-media-processing.sh",
    "generate:secrets": "node scripts/generate-secrets.js",
    "setup:env": "./scripts/setup-environment.sh",
    "postinstall": "npm run setup:media"
  },
  "keywords": [
    "music",
    "beats",
    "marketplace",
    "api"
  ],
  "author": "KabaBeats Team",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/s3-request-presigner": "^3.450.0",
    "@getbrevo/brevo": "^3.0.1",
    "@types/nodemailer": "^7.0.1",
    "@types/redis": "^4.0.10",
    "apollo-server-express": "^3.13.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "fluent-ffmpeg": "^2.1.2",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.6",
    "redis": "^5.8.2",
    "sharp": "^0.32.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/sharp": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  }
}
