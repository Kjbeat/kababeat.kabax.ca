# Implementation mode (mongo for development, supabase for production)
VITE_IMPL=mongo

# Authentication mode (mock for development, supabase for production)
VITE_AUTH=mock

# Supabase configuration (for production)
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# MongoDB configuration (for development)
MONGODB_URI=mongodb://localhost:27017/kababeat_dev

# Storage configuration
VITE_R2_ACCOUNT_ID=your_r2_account_id_here
VITE_R2_ACCESS_KEY_ID=your_r2_access_key_id_here
VITE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here
VITE_R2_BUCKET_NAME=your_r2_bucket_name_here

# Stripe configuration (for production)
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
